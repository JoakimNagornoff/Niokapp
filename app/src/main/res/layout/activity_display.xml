<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayActivity">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kontroll av:"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/TextViewBussNmr"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/TextView1"/>

    <TextView
        android:id="@+id/TextViewBusType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_below="@+id/TextView1"/>


    <TextView
        android:id="@+id/textViewStep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steg1 : "
        android:layout_below="@+id/TextViewBusType"
        android:textSize="30sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tvstep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewStep1"
        android:layout_alignBaseline="@+id/textViewStep1"
        android:ems="10"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewStep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steg 2: "
        android:layout_below="@+id/textViewStep1"
        android:textSize="30sp"
        android:padding="10dp"/>

        <TextView
            android:id="@+id/tvstep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewStep2"
            android:layout_alignBaseline="@+id/textViewStep2"
            android:ems="10"
            android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewStep3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steg 3: "
        android:layout_below="@+id/textViewStep2"
        android:textSize="30sp"
        android:padding="10dp"/>

        <TextView
            android:id="@+id/tvstep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewStep3"
            android:layout_alignBaseline="@+id/textViewStep3"
            android:ems="10"
            android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewStep4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steg 4: "
        android:layout_below="@+id/textViewStep3"
        android:textSize="30sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tvstep4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewStep4"
        android:layout_alignBaseline="@+id/textViewStep4"
        android:ems="10"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewSum"
        android:text="Sum :"
        android:textSize="30sp"
        android:layout_below="@+id/tvstep4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvSUM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewSum"
        android:layout_below="@+id/tvstep4"
        android:textSize="30sp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="204dp"
        android:text="Spara" />


</RelativeLayout>