<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ValAvBussActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/app_name"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="670dp" />

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Val av buss"
        android:textSize="40dp"
        android:layout_below="@+id/header"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/FirstImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_below="@+id/TextView1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"/>

    <ImageButton
        android:id="@+id/SecondImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_below="@+id/TextView1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="240dp"/>

    <EditText
        android:id="@+id/EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="@string/edit_bussNumber"
        android:layout_below="@id/FirstImageButton"
        android:layout_marginTop="60dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/TextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText1"
        android:textSize="30dp"
        android:text="@string/Start_controll"
        android:layout_marginTop="100dp"/>
        <TextView
            android:id="@+id/TextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView2"
            android:textSize="20dp"
            android:text="Buss: "/>
         <TextView
        android:id="@+id/TextView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
             android:textSize="20dp"
             android:text="buss nmr:"
        android:layout_below="@id/TextView3"/>

    <Button
        android:id="@+id/startControll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starta"
        android:textSize="40dp"
        android:layout_below="@id/TextView4"
        android:layout_marginTop="20dp"
        android:gravity="center" />
</RelativeLayout>



