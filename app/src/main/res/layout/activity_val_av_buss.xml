<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ValAvBussActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/app_name"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="670dp" />

    <TextView
        android:id="@+id/TextViewBussNmr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Val av Buss"
        android:textSize="40sp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/edit_bussNumber"
        android:textSize="30sp"
        android:paddingTop="20dp"
        android:layout_below="@+id/header" />


    <ImageButton
        android:id="@+id/FirstImageButton"
        android:layout_width="197dp"
        android:layout_height="74dp"
        android:layout_below="@+id/TextView1"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="214dp"
        android:src="@drawable/greenbuss" />

    <ImageButton
        android:id="@+id/SecondImageButton"
        android:layout_width="129dp"
        android:layout_height="92dp"
        android:layout_below="@+id/TextView1"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="199dp"
        android:src="@drawable/led" />

    <EditText
        android:id="@+id/EditText1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewBussNmr"
        android:layout_marginTop="60dp"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/FirstImageButton"
        android:layout_marginTop= "100dp"
        android:text="@string/Start_controll"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView2"
        android:text=""
        android:textSize="30dp" />

    <TextView
        android:id="@+id/TextView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView3"
        android:text=""
        android:textSize="30sp" />

    <Button
        android:id="@+id/startControll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView4"
        android:gravity="center"
        android:text="Starta"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/EditText1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Ok" />
</RelativeLayout>



